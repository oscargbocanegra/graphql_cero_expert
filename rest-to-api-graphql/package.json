{
  "name": "rest-to-api-graphql",
  "version": "1.0.0",
  "description": "API GraphQl F1 from API Rest to Rest Data Source",
  "main": "build/main.js",
  "scripts": {
    "start": "node build/main.js",
    "build": "mkdir -p build && tsc -p tsconfig.build.json && ncp src/graphql/schema build/graphql/schema",
    "build:clean": "rm -rf build && npm run build",
    "start:dev": "npm run build:dev",
    "build:dev": "nodemon \"src/main.ts\" --exec \"ts-node\" src/main.ts -e ts,graphql,json",
    "dev": "npm run build:dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oscargbocanegra/rest-to-api-graphql.git"
  },
  "keywords": ["ergast", "api-res-graphql", "graphql", "rest-data-source"],
  "author": "oscar bocanegra <oscargiovanni@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oscargbocanegra/rest-to-api-graphql/issues"
  },
  "homepage": "https://github.com/oscargbocanegra/rest-to-api-graphql#readme",
  "dependencies": {
    "apollo-datasource-rest": "^3.7.0",
    "apollo-server-express": "^3.13.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "graphql": "^15.8.0",
    "graphql-import-node": "0.0.4",
    "graphql-playground-middleware-express": "^1.7.12",
    "graphql-tools": "^4.0.8",
    "ncp": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@types/compression": "0.0.36",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/node": "^16.0.0",
    "nodemon": "^2.0.1",
    "ts-node": "^10.9.0"
  }
}
