{
  "name": "graphql_cero_expert",
  "version": "1.0.0",
  "description": "Curso GraphQL de cero a experto",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "setup": "npm install",
    "clean": "rm -rf node_modules package-lock.json",
    "reset": "npm run clean && npm install",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\"",
    "validate": "npm run lint && npm run format:check && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oscargbocanegra/graphql_cero_expert.git"
  },
  "keywords": [
    "graphql",
    "nodejs",
    "apollo-server",
    "curso",
    "tutorial"
  ],
  "author": "Oscar Giovanni Bocanegra",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/oscargbocanegra/graphql_cero_expert/issues"
  },
  "homepage": "https://github.com/oscargbocanegra/graphql_cero_expert#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "apollo-server-testing": "^2.25.4",
    "prettier": "^3.1.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "apollo-server-express": "^3.12.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "dotenv": "^16.3.1"
  }
}
